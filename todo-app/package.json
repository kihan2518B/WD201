    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.56.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.5.0",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "sequelize-cli": "^6.6.2",
        "supertest": "^6.3.3"
